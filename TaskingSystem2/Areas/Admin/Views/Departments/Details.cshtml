@model TaskingSystem2.Models.Department

@{
    ViewData["Title"] = "Details";
}



<div class="Form-background border">
    <h2 class="text-info">Department Details</h2>
    <br />
    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="Name" class="col-form-label"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" readonly />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="Directorate" class="col-form-label"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="Directorate.Name" class="form-control" readonly />
        </div>
    </div>
   
    <div class="form-group row">
        <div class="col-5 offset-2">
            <partial name="_EditAndBackToListButton" model="@Model.Id" />
        </div>
    </div>

</div>


