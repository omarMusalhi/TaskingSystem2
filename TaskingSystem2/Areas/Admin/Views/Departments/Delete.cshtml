@model TaskingSystem2.Models.Department

@{
    ViewData["Title"] = "Delete";
}

<div class="Form-background border">
    <form method="post" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h2 class="text-info">Delete Department</h2>
        <br />
        <div class="form-group row">
            <div class="col-sm-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                <label asp-for="DirectorateId" class="col-form-label"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="Directorate.Name" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteAndBackToListButton" model="@Model.Id" />
            </div>
        </div>

    </form>

</div>