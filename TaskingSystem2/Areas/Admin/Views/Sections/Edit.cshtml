@model TaskingSystem2.Models.Section

@{
    ViewData["Title"] = "Edit";
}


<div class="Form-background border">
    <form method="post" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h2 class="text-info">Edit Section</h2>
        <br />
        <div class="form-group row">
            <div class="col-sm-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                <label asp-for="DepartmentId" class="col-form-label"></label>
            </div>
            <div class="col-sm-10">
                <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId" ></select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DetailsAndBackToListButton" model="@Model.Id" />
            </div>
        </div>

    </form>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
